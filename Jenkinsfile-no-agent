pipeline {
    agent none // No agent specified, runs on the Jenkins controller
    stages {
        stage('Verify Environment') {
            steps {
                script {
                    // Print environment details to verify the pipeline is running
                    echo "Running on Jenkins controller pod"
                    sh 'hostname'
                    sh 'pwd'
                    sh 'whoami'
                }
            }
        }
        stage('Placeholder for Build') {
            steps {
                echo "Skipping Docker build for now - this stage will be updated later"
            }
        }
    }
    post {
        always {
            echo "Pipeline completed"
        }
    }
}
